<html>
    <head>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="materialize.min.css"  media="screen,projection"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body>
        <nav style="margin-bottom: 20px;;">
            <div class="green darken-4" style="padding-bottom: 27px">
                <div class="navbar-wrapper container" style="text-align: center;">
                   <h3><lable>Gambling Site</lable></h3>
                </div>
            </div>
        </nav>
        <div class="ui-login center-align container">
            <div class="ui-login-left">
	            <p>Select a number between 1 to 10</p>
                <form action="/gamble" method="post">
                    Amount($): <input type="text" name="stake" placeholder="amount" required="required"> 
                    Number: <input type="text" name="number" placeholder="Gamble number" required="required">
            		<input type="submit" value="Gamble" name="submit">
        		</form>
        	</div>
            <div class="ui-login-right"> 
	            <table>
	                <tr>
	                    <th>&nbsp;</th>
	                    <th>
	                Current Session
	                    </th>
	                    <th>
	                Total Values
	                    </th>
	                </tr>
	                <tr>
	                    <th>Win:</th>
	                    <td>
	                        <%= session[:win] %> 
	                    </td>
	                    <td>
	                        <%= session[:total_win]%> 
	                    </td>
	                </tr>
	                <tr>
	                    <th>Lost:</th>
	                    <td>
	                        <%= session[:lost] %> 
	                    </td>
	                    <td>
	                        <%= session[:total_lost]%> 
	                    </td>
	                </tr>
	                <tr>
	                    <th>Profit</th>
	                    <td>
	                        <%= session[:win]-session[:lost]%>
	                    </td>
	                    <td>
	                        <%= session[:total_win] - session[:total_lost]%> 
	                    </td>
	                </tr>
	            </table>
	        </div>
            <div style="margin-top: 20px;" align="right">
                <button><a class="button" href="/logout">Logout</a></button>
            </div>    
            <div class="clearfix"></div>
        </div>
        <script type="text/javascript" src="materialize.min.js"></script>
    </body>
</html>
